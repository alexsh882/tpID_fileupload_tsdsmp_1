<%- include('../layouts/head.ejs') ;%>


    <body class="h-100 d-flex flex-column">
        <%- include('../layouts/nav'); %>
            <div class="container-fluid py-5 px-md-5 col">
                <header class="d-flex align-items-center justify-content-between">
                    Nueva Imagen
                </header>
                <main class="col h-100">
                    <form class="d-flex flex-column mx-auto gap-3" id='uploadForm' encType="multipart/form-data">
                        <input type="file" name="image" id="image" accept="image/jpeg, image/png, image/jpg" />
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="checkCloudinary">
                            <label class="form-check-label" for="checkCloudinary">
                                Subir a Cloudinary
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="checkLocal">
                            <label class="form-check-label" for="checkLocal">
                                Subir a Local
                            </label>
                        </div>
                        <div class="d-flex">
                            <input id="btnSubmit" class="btn btn-primary w-25" type='submit' value='Subir' />
                            <div id="spinner" class="spinner-border text-primary mx-2 visually-hidden" role="status">
                            </div>
                            <span id="sending" class="visually-hidden mx-2 d-flex align-items-center">Enviando archivo, espere un momento...</span>

                        </div>
                        <p id="validationErrors"></p>
                    </form>
                </main>
            </div>
            <%- include('../layouts/footer'); %>
                <script src="/js/create.js"></script>

    </body>

    </html>